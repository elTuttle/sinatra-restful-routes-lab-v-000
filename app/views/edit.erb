<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="title" value="<%=@recipe.name%>"></p>
  <p>Ingredients: <input type="text" name="title" value="<%=@recipe.ingredients%>"></p>
  <p>Cook Time: <input type="text" name="title" value="<%=@recipe.cook_time%>"></p>
  <input type="submit" value="submit">
</form>
